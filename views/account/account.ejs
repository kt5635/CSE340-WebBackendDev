<!-- Content Heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- flash message -->
<%- messages() %>

<h2>Welcome <%= accountData.account_firstname %></h2>

<p><a href="/account/update/<%= accountData.account_id %>" class="account-link">Update Account Information</a></p>

<% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv" class="account-link">Manage Inventory</a></p>
<% } %>

<% if (accountData.account_type === "Admin") { %>
  <h3>Employee Management</h3>
  <p><a href="/account/manage-employee" class="account-link">Manage Employee Account</a></p>
<% } %>