<!-- Content Heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- flash message -->
<%- messages() %>

<!-- Login form -->
 <div class="form-container">
    <form action="/account/register" method="post">
        <label for="first-name">First Name</label>
        <input type="text" name="account_firstname" id="first-name">

        <label for="Last-name">Last Name</label>
        <input type="text" name="account_lastname" id="last-name">

        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" required>
        <div class="password-note">
          <ul>
            <li>Password must have the following:</li>
            <li>-Be at least 12 characters</li>
            <li>-Contain 1 capital letter</li>
            <li>-Contain 1 number</li>
            <li>-Contain 1 special character</li>
          </ul>
        </div> 

        <button type="submit">Register</button>
    </form>

 </div>