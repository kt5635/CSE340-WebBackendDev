<!-- Content Heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors && errors.array().length > 0) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="form-container">
<form id="manageEmployee" action="/account/manage-employee" method="post">
    <label for="userList">Registered Users</label>
        <%- userList %>
    <label for="typeList">Account Type</label>
    <select name="account_type" id="typeList" required>
        <option value="">Choose an Account Type</option>
        <option value="Client">Client</option>
        <option value="Employee">Employee</option>
        <option value="Admin">Admin</option>
    </select>

    <button type="submit">Update Employee Access</button>

    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
</form>
</div>